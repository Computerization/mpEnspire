/**app.wxss**/
page {
  padding: 0px;
  margin: 0px;
}
.verticalcenter {
  display: flex;
  align-items: center;
}
.horizontalcenter{
  display: flex;
  justify-content: center;
}
.maincontainer {
  position: absolute;
  padding: 15px 0px 15px 0px;
  left: 5%;
  width: 90%;
}
.paragraphcontainer {
  width: 100%;
  border-radius: 15px;
  padding: 15px 0px 15px 0px;
  box-shadow: 0 5px 15px rgba(65, 65, 65, 0.1);
  text-shadow: 0 1px 1px rgba(64, 64, 64, 0.3);
  display: flex;
  justify-content: space-around;
}
.title{
  font-size:x-large;
  font-weight: bolder;
}
.paragraph{
  font-size: normal;
  font-weight:normal;
}
.contentcontainer {
  position: fixed;
  width: 100%;
  height: 65px;
  padding: 10px 0px 0px 0px;
  bottom: 0px;
  box-shadow: 0 -10px 15px rgba(65, 65, 65, 0.3);
  text-shadow: 0 1px 1px rgba(64, 64, 64, 0.3);
  display: flex;
  justify-content: space-around;
  background-color: white;
  z-index: 1;
}
.contentbutton {
  width: 50px;
  height: 50px;
}
.textcontainer {
  width: 80%;
}